@{
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html style="height: 100%;">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Votica App</title>

        <link href="~/lib/mdbootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
        <!-- Material Design Bootstrap -->
        <link href="/lib/mdbootstrap/dist/css/mdb.min.css" rel="stylesheet">
        <!-- Maine CSS file -->
        <link rel="stylesheet" href="~/css/site.css" />
        <!-- Font Aweseom kit -->
        <script src="https://kit.fontawesome.com/7589587113.js"></script>

    </head>

    <body class="primary-color" style="height: 100%;">
        <div class="container h-100">
            <div class="row h-100 justify-content-center align-items-center">
                <div class="card w-50">
                    <div class="card-body">
                        <h2 class="text-center">Hey there!</h2>
                        <form class="text-center">
                            <div class="md-form">
                                <input type="email" id="loginEmail" class="form-control mb-4" placeholder="E-mail">
                            </div>
                            <div class="md-form">
                                <input type="password" id="loginPassword" class="form-control mb-4" placeholder="Password">
                            </div>
                            <div class="d-flex justify-content-around">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="materialLoginFormRemember">
                                    <label class="form-check-label" for="materialLoginFormRemember">Remember me</label>
                                </div>
                                <div>
                                    <a href="">Forgot password?</a>
                                </div>
                            </div>
                            <button class="btn primary-color text-white btn-block my-4" type="submit">Sign in</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </body>

    <!-- SCRIPTS -->
    <!-- JQuery -->
    <script type="text/javascript" src="~/lib/mdbootstrap/dist/js/jquery-3.4.1.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="~/lib/mdbootstrap/dist/js/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="~/lib/mdbootstrap/dist/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="~/lib/mdbootstrap/dist/js/mdb.min.js"></script>
    <!-- Main JS File -->
    <script src="~/js/site.js" asp-append-version="true"></script>

</html>